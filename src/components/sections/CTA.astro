---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<section id="cta" class="pb-20">
  <Container>
    <div
      class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900"
    >
      <div class="absolute right-0 top-0 h-full w-full flex justify-end">
        <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
          <span
            class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
          ></span>
        </div>
      </div>

      <div class="absolute left-0 bottom-0 h-full w-full flex items-end">
        <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
          <span
            class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
          ></span>
        </div>
      </div>

      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
        <h1
          class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight
          font-bold text-heading-1"
        >
          Get In Touch <span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600">for Your Next Project</span>
        </h1>
        <Paragraph className={"pt-10"}>
          Our team is ready to help you transform your ideas into powerful solutions. Feel free to reach out by filling out the form below!
        </Paragraph>

        <!-- Contact Form -->
        <div class="mx-auto max-w-md sm:max-w-xl pt-10">
          <form action="https://formspree.io/f/mvgpjogg" method="POST" class="space-y-6">
            <div class="flex gap-5 items-center text-heading-3 shadow-lg shadow-box-shadow border border-box-border bg-box-bg rounded-full py-1 px-6 focus-within:bg-body focus-within:border-primary">
              <span class="min-w-max pr-2 border-r border-box-border">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 9v.906a2.25 2.25 0 01-1.183 1.981l-6.478 3.488M2.25 9v.906a2.25 2.25 0 001.183 1.981l6.478 3.488m8.839 2.51l-4.66-2.51m0 0l-1.023-.55a2.25 2.25 0 00-2.134 0l-1.022.55m0 0l-4.661 2.51m16.5 1.615a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V8.844a2.25 2.25 0 011.183-1.98l7.5-4.04a2.25 2.25 0 012.134 0l7.5 4.04a2.25 2.25 0 011.183 1.98V19.5z" />
                </svg>
              </span>
              <input type="text" id="name" name="name" placeholder="Your Name" class="w-full py-3 outline-none bg-transparent border-none placeholder-gray-500" required>
            </div>
            
            <div class="flex gap-5 items-center text-heading-3 shadow-lg shadow-box-shadow border border-box-border bg-box-bg rounded-full py-1 px-6 focus-within:bg-body focus-within:border-primary">
              <span class="min-w-max pr-2 border-r border-box-border">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
                </svg>
              </span>
              <input type="email" id="email" name="email" placeholder="Email Address" class="w-full py-3 outline-none bg-transparent border-none placeholder-gray-500" required>
            </div>

            <div class="flex gap-5 items-center text-heading-3 shadow-lg shadow-box-shadow border border-box-border bg-box-bg rounded-md py-1 px-6 focus-within:bg-body focus-within:border-primary">
              <textarea id="message" name="message" placeholder="Your Message" rows="4" class="w-full h-28 py-3 outline-none bg-transparent border-none placeholder-gray-500 rounded-md" required></textarea>
            </div>

            <Button variant={"primary"} className={"w-full rounded-full py-3"}>
              <span class="text-white relative z-[5]">Submit</span>
            </Button>
          </form>
        </div>
      </div>
    </div>
  </Container>
</section>
